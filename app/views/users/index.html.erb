<div class="body">
      <div class="container">

      	<div class="row">
          <%= render 'books/list', user: current_user, book: @book %>


  <div class="col-xs-9">
    <h2>Users</h2>

    <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <th><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "30x30" %></th>
      <th><%= user.name %></th>
      <th><%= link_to "Show", user_path(user) %></th>
    </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
      </div>
    </div>